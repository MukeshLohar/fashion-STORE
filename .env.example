# Environment variables for Fashion Store
# Copy this file to .env and update with your actual values

# Django Settings
SECRET_KEY=django-insecure-change-this-in-production-very-long-secret-key-12345
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (Optional - SQLite is default)
# Uncomment and configure for PostgreSQL
# DB_NAME=fashion_store
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# Razorpay Configuration (Get from https://razorpay.com/)
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_secret_key_here

# PayPal Configuration (Get from https://developer.paypal.com/)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Email Configuration (Optional - for password reset)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_app_password